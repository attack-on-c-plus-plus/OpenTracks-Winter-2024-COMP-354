<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/run_lift_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        style="?attr/textAppearanceBody1"
        tools:text="Lift 1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/run_lift_item_gain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceBody2"
            tools:text="174m"
            app:drawableStartCompat="@drawable/ic_arrow_drop_up_24" />

        <TextView
            android:id="@+id/run_lift_item_loss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceBody2"
            tools:text="74m"
            app:drawableStartCompat="@drawable/ic_arrow_drop_down_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/run_lift_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        style="?attr/textAppearanceBody1"
        tools:text="0.20 km" />

    <TextView
        android:id="@+id/run_lift_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        style="?attr/textAppearanceBody1"
        tools:text="0:50" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/run_lift_top_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceBody2"
            tools:text="10 km/h" />

        <TextView
            android:id="@+id/run_lift_average_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceBody2"
            tools:text="5 km/h" />

    </LinearLayout>
</LinearLayout>